extends ../../layouts/default
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    +alert-success(3000)

    h1(class="mb-4") Trang tổng quan
    .row.mt-4
        .col-5
            a(href=`${prefixAdmin}/products-category`)
                .card.mb-3
                    .card-header Danh mục sản phẩm 
                    .card-body 
                        p Số lượng: <b>#{statistic.productCategory.total}</b>
                        p Hoạt động: <b>#{statistic.productCategory.active}</b>
                        p Dừng hoạt động: <b>#{statistic.productCategory.inactive}</b>
                        p Đã xóa: <b>#{statistic.productCategory.deleted}</b>
        .col-5
            a(href=`${prefixAdmin}/products`)
                .card.mb-3
                    .card-header Danh sách sản phẩm 
                    .card-body 
                        p Số lượng: <b>#{statistic.product.total}</b>
                        p Hoạt động: <b>#{statistic.product.active}</b>
                        p Dừng hoạt động: <b>#{statistic.product.inactive}</b>
                        p Đã xóa: <b>#{statistic.product.deleted}</b>
        .col-5
            a(href=`${prefixAdmin}/users`)
                .card.mb-3
                    .card-header Danh sách khách hàng
                    .card-body 
                        p Số lượng: <b>#{statistic.user.total}</b>
                        p Hoạt động: <b>#{statistic.user.active}</b>
                        p Dừng hoạt động: <b>#{statistic.user.inactive}</b>
                        p Đã xóa: <b>#{statistic.user.deleted}</b>
        .col-5
            a(href=`${prefixAdmin}/orders`)
                .card.mb-3
                    .card-header Danh sách đặt hàng
                    .card-body
                        p Số lượng: <b>#{statistic.order.total}</b>
                        p Thành công: <b>#{statistic.order.success}</b>
                        p Đang vận chuyển: <b>#{statistic.order.delivering}</b>
                        p Đang xử lý: <b>#{statistic.order.processing}</b>
                        p Đã hủy: <b>#{statistic.order.canceled}</b>