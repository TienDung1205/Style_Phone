mixin select-tree(items, level = 1, parent_id = "")
    each item in items
        - const prefix = Array(level + 1).join("-- ")
        option(
            value=item.id
            selected=(item.id == parent_id ? true : false)
        ) #{prefix}#{item.title}
            if item.child && item.child.length > 0
                +select-tree(item.child, level + 1, parent_id)