extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    
    .container.my-5
        .row.justify-content-center 
            .col-5.border.p-3.rounded.shadow
                h1(class="text-center") Đăng ký tài khoản 
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullName") Họ tên *
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-group")
                        label(for="email") Email *
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                            minlength="8"
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng ký
                hr
                div(class="d-flex justify-content-between")
                    p Bạn đã có tài khoản? 
                        a(href="/user/login") Đăng nhập ngay