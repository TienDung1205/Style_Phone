extends ../../layouts/default
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    .container.my-3
        .row
            .col-12
                +box-head(pageTitle)
    
        
        .row
            .col-12
                table(
                    class="table table-hover table-sm"
                )
                    thead
                        tr
                            th STT
                            //- th Mã đơn hàng
                            //- th Email
                            th Họ tên
                            th Số điện thoại
                            th Địa chỉ
                            th Trạng thái
                            th Tổng tiền
                            th Ngày mua hàng
                            th Thao tác

                    tbody 
                        each item, index in records
                            tr
                                td #{index + 1}
                                //- td #{item.code}
                                //- td #{item.user ? (item.user.email ? item.user.email : "") : ""}
                                td #{item.userInfo.fullName}
                                td #{item.userInfo.phone}
                                td #{item.userInfo.address}
                                td
                                    if item.status == "success"
                                        a(
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge badge-success"
                                        ) Thành công
                                    else if item.status == "delivering"
                                        a(
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge badge-primary"
                                        ) Đang vận chuyển
                                    else if item.status == "processing"
                                        a(
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge badge-secondary"
                                        ) Đang xử lý
                                    else if item.status == "canceled"
                                        a(
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge badge-danger"
                                        ) Đã hủy
                                td #{item.totalPrice.toLocaleString('vi-VN')}đ
                                td #{item.purchaseDate}
                                td 
                                    a(
                                        href=`/user/order/detail/${item.id}`
                                        class="btn btn-primary btn-sm mr-1"
                                    ) Chi tiết
                                    if(item.status == "processing")
                                        button(
                                            class="btn btn-danger btn-sm"
                                            data-id = item.id
                                            button-canceled
                                        ) Hủy
    
    form.prevent-double-submit(
        action=""
        method="POST"
        id="form-canceled-item"
        data-path=`/user/order/canceled`
    )