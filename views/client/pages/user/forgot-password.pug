extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    
    .container.my-5
        .row.justify-content-center 
            .col-5.border.p-3.rounded.shadow
                h1(class="text-center") #{pageTitle}
                hr
                p| Vui lòng nhập email để tìm kiếm tài khoản của bạn
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email *
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    hr
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận Email