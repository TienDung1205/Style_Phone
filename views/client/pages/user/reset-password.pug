extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    
    .container.my-5
        .row.justify-content-center 
            .col-5.border.p-3.rounded.shadow
                h1(class="text-center") #{pageTitle}
                hr
                form.prevent-double-submit(
                    action="/user/password/reset"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Mật khẩu mới *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                            minlength="8"
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                            minlength="8"
                        )
                    hr
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận