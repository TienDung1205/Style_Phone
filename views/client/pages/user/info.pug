extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

    block main
        +alert-error(5000)
        
        .row.flex-column.justify-content-center.align-items-center
            .w-50
                h1(class="mb-4") 
                    +box-head(pageTitle)


                if(user.avatar)
                    img(src=user.avatar width="150px" class="mb-3")
                else 
                    img(src="images/avatar.png" width="150px" class="mb-3")
                if(user.fullName)
                    div(class="form-group")
                        label(for="fullName") Họ tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            value=user.fullName
                            required
                            readonly
                        )
                if(user.email)
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value=user.email
                            required
                            readonly
                        )
                if(user.phone)
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            value=user.phone
                            readonly
                        )
                .d-flex.justify-content-center
                    a(
                        href=`user/edit/`
                        class="btn btn-warning btn-sm"
                    ) Chỉnh sửa thông tin