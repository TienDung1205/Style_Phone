mixin product-item(item)
    .col-3.mb-3
        .product-item
            a(href=`/products/detail/${item.slug}`)
                .inner-image
                    img(
                        src=item.thumbnail
                        alt=item.title
                    )
                    if(item.featured == "1")
                        .inner-featured Hot
                .inner-content
                    h3.inner-title #{item.title}
                    if item.discountPercentage
                        .inner-price-new #{item.newPrice.toLocaleString('vi-VN')}đ
                        .inner-price-old #{item.price.toLocaleString('vi-VN')}đ
                        .inner-discount Giảm #{item.discountPercentage.toLocaleString('vi-VN')}đ
                    else 
                        .inner-price-new #{item.price.toLocaleString('vi-VN')}đ